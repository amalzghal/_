@model RentCar.Models.CR_Mas_Sup_Membership
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .texterr {
        font-family: 'Times New Roman' !important;
        font-size: 14px !important;
        color: red !important;
        margin-right: 50% !important;
        height: 40px;
    }

    #asterisk {
        color: red;
        float: right;
        font-size: 15px !important;
        margin-right: 112px;
        margin-top: 5px;
        position: absolute;
        font-family: 'Times New Roman';
    }
    .title_corp {
        font-family: 'Times New Roman';
        font-size: 25px;
    }

    .subtitle_corp {
        padding-top: 3px !important;
        font-family: 'Times New Roman' !important;
        color: #083555;
    }
</style>
<div class="corp_content">
    <div class="title_corp">العضويات / اضافة عضوية جديدة</div>
    <div class="subtitle_corp">تمكن هذه الصفحة المستخدم من إظافة عضوية جديدة</div>
    <div class="hr_60"></div>
    <div class="hr_80"></div>
    <div class="corp_page">
        <div class="page_content" style=" margin-top: 10px; height:421px!important;">
            @*<div class="text-danger" id="Message" style="margin-Top: 10px; margin-right: 400px;">@TempData["TempModel"]</div>*@
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    <div class="col-md-6 offset-md-6 " style="margin-top:50px;">
                        @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Code, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Mas_Sup_Membership_Code, new { @class = "input_form col-md-6", style = "float:right;width:30%", @readonly = "readonly" })
                        <div class="texterr"></div>
                    </div>
                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Ar_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Mas_Sup_Membership_Ar_Name, new { @class = "input_form col-md-6", maxlength = "20", onkeyup = "movetoNext('CR_Mas_Sup_Membership_En_Name')", autocomplete = "off", onkeypress = "return CheckArabicCharactersOnly(event);", style = "margin-left: -65px;width: 250px;" })
                        <div id="asterisk">*</div>
                        <div class="texterr">@ViewBag.LRExistAr</div>
                    </div>
                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Mas_Sup_Membership_En_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Mas_Sup_Membership_En_Name, new { @class = "input_form col-md-6", maxlength = "20", onkeyup = "movetoNext('CR_Mas_Sup_Membership_Fr_Name')", autocomplete = "off", onkeypress = "return (event.charCode > 64 && event.charCode < 91) || (event.charCode > 96 && event.charCode < 123)", style = "margin-left: -65px;width: 250px;" })
                        <div id="asterisk">*</div>
                        <div class="texterr">@ViewBag.LRExistEn</div>
                    </div>
                    <div class="col-md-6 offset-md-6 m-t-1">
                        @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Fr_Name, new { @class = "label_form col-md-6", style = "float:right" })
                        @Html.TextBoxFor(model => model.CR_Mas_Sup_Membership_Fr_Name, new { @class = "input_form col-md-6", maxlength = "20", autocomplete = "off", oninput = "this.value=this.value.replace(/[^a-zA-Z0-9 àâäèéêëîïôœùûüÿçÀÂÄÈÉÊËÎÏÔŒÙÛÜŸÇ]/g,'')", style = "margin-left: -65px;width: 250px;" })
                        <div id="asterisk">*</div>
                        <div class="texterr">@ViewBag.LRExistFr</div>
                    </div>
                    @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Status, htmlAttributes: new { @class = "Hidden" })
                    @Html.EditorFor(model => model.CR_Mas_Sup_Membership_Status, new { htmlAttributes = new { @class = "hidden" } })

                    @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Group_Code, "رمز المجموعة", htmlAttributes: new { @class = "Hidden" })
                    @Html.DropDownList("CR_Mas_Sup_Membership_Group_Code", null, new { @class = "Hidden" })

                    @Html.LabelFor(model => model.CR_Mas_Sup_Membership_Reasons, htmlAttributes: new { @class = "Hidden" })
                    @Html.EditorFor(model => model.CR_Mas_Sup_Membership_Reasons, new { htmlAttributes = new { @class = "hidden" } })
                </div>
                <div class="col-md-6" style="margin-top:30px">
                    <div style="height:110px;"></div>
                    <a href="/Membership/Index/" class="btn" style="color:white;background-color:#F3B161;width:80px!important;padding-right:27px;border-radius:unset;height:30px;padding-top:5px;float:left;font-size:15px!important;font-family:'Times New Roman';">انهاء</a>
                </div>
                <div class="col-md-6" style="margin-top:30px;">
                    <div style="height:110px;"></div>
                    <input type="submit" name="add" class="submit_btn" id="add_btn" value="حفظ" />
                </div>
                <div class="col-md-6" id="Message" style="font-family:'Times New Roman';font-size:16px;color:red;margin-Top: 380px; margin-right: 330px;position:absolute;">@TempData["TempModel"]</div>
                
                if (@ViewBag.LRExistAr == null && @ViewBag.LRExistEn == null && @ViewBag.LRExistFr == null)
                { <script>document.getElementById('CR_Mas_Sup_Membership_Ar_Name').focus()</script> }
                else if (@ViewBag.LRExistAr != null)
                { <script>document.getElementById('CR_Mas_Sup_Membership_Ar_Name').focus()</script> }
                else if (@ViewBag.LRExistAr == null && @ViewBag.LRExistEn != null)
                { <script>document.getElementById('CR_Mas_Sup_Membership_En_Name').focus()</script> }
                else if (@ViewBag.LRExistAr == null && @ViewBag.LRExistEn == null && @ViewBag.LRExistFr != null)
                { <script>document.getElementById('CR_Mas_Sup_Membership_Fr_Name').focus()</script> }
                else if (@ViewBag.LRExistAr != null && @ViewBag.LRExistEn != null && @ViewBag.LRExistFr != null)
                { <script>document.getElementById('CR_Mas_Sup_Membership_Ar_Name').focus()</script> }

                <script type="text/javascript">
                    $(document).ready(function () { setTimeout(function () { $("#Message").fadeOut(); }, 4000); });
                </script>
                <script language="javascript" type="text/javascript">
                    // Allow Arabic Characters only
                    function CheckArabicCharactersOnly(e) {
                        var unicode = e.charCode ? e.charCode : e.keyCode
                        if (unicode != 8) { //if the key isn't the backspace key (which we should allow)
                            if (unicode == 32)
                                return true;
                            else {
                                if ((unicode > 48 || unicode < 57) && (unicode < 0x0600 || unicode > 0x06FF)) //if not a number or arabic
                                    return false; //disable key press
                            }
                        }
                    }
                    function movetoNext(nextFieldID) {
                        if (event.keyCode === 13) {
                            document.getElementById(nextFieldID).focus();
                        }
                    };
                </script>
            }
        </div>
    </div>
</div>