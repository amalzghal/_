                            <table class="table table-bordered table-striped " id="myTable">
                                <thead>
                                    <tr>
                                        <th style="width:10%;" onclick="sortTable(0)">@Html.DisplayNameFor(model => model.CR_Mas_Sup_Membership_Code)</th>
                                        @if (RentCar.Controllers.HomeController.Language == "1")
                                        {
                                            <th style="width:15%;" onclick="sortTable(1)">العضوية</th>
                                        }
                                        @if (RentCar.Controllers.HomeController.Language == "2")
                                        {
                                            <th style="width:15%;" onclick="sortTable(1)">@Html.DisplayNameFor(model => model.CR_Mas_Sup_Membership_En_Name)</th>
                                        }
                                        @if (RentCar.Controllers.HomeController.Language == "3")
                                        {
