                                                    }
                                                    @if (item.CR_Mas_Sup_Membership_Status == "D")
                                                    {
                                                        <a href="~/Membership/edit/@Html.DisplayFor(modelItem => item.CR_Mas_Sup_Membership_Code)">محذوف</a>
                                                    }
                                                </td>
