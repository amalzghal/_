                                                        <a href="~/Membership/edit/@Html.DisplayFor(modelItem => item.CR_Mas_Sup_Membership_Code)">
                                                            @Html.DisplayFor(modelItem => item.CR_Mas_Sup_Membership_Ar_Name)
                                                        </a>
                                                    </td>
                                                }
                                                @if (RentCar.Controllers.HomeController.Language == "2")
                                                {
